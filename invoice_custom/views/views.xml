<odoo>
    <record model="ir.ui.view" id="reason_credit_note">
    <field name="name">reason_credit_note</field>
    <field name="model">account.move.reversal</field>
    <field name="inherit_id" ref="account.view_account_move_reversal"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='reason']" position="attributes">
           <attribute name="required">True</attribute>
        </xpath>
    </field>
    </record>

    <record model="ir.ui.view" id="invoice_custom_form">
        <field name="name">invoice_custom_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                   position="before" optional="show">
                <field name="code" optional="show"/>
                <field name="barcode" optional="show"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']"
                   position="before">
                <field name="main_discount" optional="show"/>
                <field name="additional_discount" optional="show"/>
                <field name="private_discount" optional="show"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='quantity']"
                   position="before">
                <field name="qty_available" optional="show"/>
                <field name="qty_purchase" optional="show"/>
                <field name="bonous" optional="show"/>

            </xpath>
        </field>
    </record>
</odoo>