<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_view_vendors" model="res.groups">
            <field name="name">View Partners (Vendors)</field>
        </record>
        <record id="group_view_customers" model="res.groups">
            <field name="name">View  Partners (Customers)</field>
        </record>
        <record id="view_view_vendors_rule" model="ir.rule">
            <field name="name">View  Vendors</field>
            <field ref="base.model_res_partner" name="model_id"/>
            <field name="domain_force">['|',('is_user_check','=',True),('is_vendor_check', '=',True )] if user.has_group('is_customer_is_vendor.group_view_vendors') else []
            </field>
            <field name="global" eval="1"/>
        </record>
        <record id="view_view_customers_rule" model="ir.rule">
            <field name="name">View Customers</field>
            <field ref="base.model_res_partner" name="model_id"/>
            <field name="domain_force">['|',('is_user_check','=',True),('is_customer_check', '=',True )] if user.has_group('is_customer_is_vendor.group_view_customers') else []
            </field>
            <field name="global" eval="1"/>
        </record>


    </data>
</odoo>