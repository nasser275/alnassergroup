<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="healthy_credit_note_view_move_form" model="ir.ui.view">
            <field name="name">account.invoice.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='ref']" position="after">
                    <field name="refund_type" required="0"
                           attrs="{'invisible':[('move_type','not in',['in_refund','out_refund'])],'readonly':[('state','!=','draft')],
                           'required':[('move_type','in',['in_refund','out_refund']),('state','=','draft')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

