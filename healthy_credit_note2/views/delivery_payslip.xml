<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_account_invoice_reprint_receipt" model="report.paperformat">
        <field name="name">Delivery Receipt</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">150</field>
        <field name="page_width">75</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">150</field>
    </record>
    <template id="healthy_internal_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>
    </template>
    <template id="report_delivery_document_receipt">
        <t t-call="web.html_container">
            <t t-call="healthy_credit_note.healthy_internal_layout">
                <!--                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />-->
                <div class="page">
                    <style>
                        .o_boxed_footer, .o_boxed_header, .o_report_layout_boxed {
                        font-family: "Noto", "Lucida Grande", Helvetica, Verdana, Arial, sans-serif;
                        color: rgb(73, 80, 87);
                        font-size: 1.5rem;
                        }
                        body {
                        font-family: "Noto", "Lucida Grande", Helvetica, Verdana, Arial, sans-serif;
                        font-size: 1.5rem;
                        line-height: 1.5;
                        color: #212529;
                        text-align: left;
                        }
                        thead { display: table-header-group; }
                        tfoot { display: table-row-group; }
                        tr {page-break-inside: avoid;}
                    </style>
                    <h3 class="text-center">أذن أستلام بضاعة</h3>
                    <table class="table table-borderless table-condensed table-sm"
                           style="font-size: 1.5rem !important;font-family: monospace !important;">
                        <thead>
                            <tr>
                                <th t-if="o.origin" class="text-right">
                                    <strong>اوردر</strong>
                                </th>
                                <th name="td_sched_date_h" class="text-right" style="padding-right: 15px;">
                                    <strong>تاريخ</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-if="o.origin" class="text-right">
                                    <span t-field="o.origin"/>
                                </td>
                                <td name="td_sched_date" class="text-right" style="padding-right: 15px;">
                                    <t t-if="o.state == 'done'">
                                        <span t-field="o.date_done"/>
                                    </t>
                                    <t t-if="o.state != 'done'">
                                        <span t-field="o.scheduled_date"/>
                                    </t>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-borderless table-condensed table-sm"
                           style="font-size: 1.5rem !important;font-family: monospace !important;">
                        <thead>
                            <tr>
                                <th t-if="o.branch_id" class="text-right">
                                    <strong>الفرع</strong>
                                </th>
                                <th t-if="o.partner_id" class="text-right">
                                    <strong>اسم المستلم</strong>
                                </th>
                                <!--                                <th t-if="o.serial_number" class="text-right" style="padding-right: 15px;">-->
                                <!--                                    <strong>رقم السيريال</strong>-->
                                <!--                                </th>-->
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-if="o.branch_id" class="text-right">
                                    <span t-field="o.branch_id"/>
                                </td>
                                <td t-if="o.partner_id" class="text-right">
                                    <span t-field="o.partner_id"/>
                                </td>
                                <!--                                <td t-if="o.serial_number" class="text-right" style="padding-right: 15px;">-->
                                <!--                                    <span t-field="o.serial_number"/>-->
                                <!--                                </td>-->
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-borderless table-condensed table-sm mt48" t-if="o.state!='done'"
                           style="font-size: 1.5rem !important;font-family: monospace !important;">
                        <!--                        <thead>-->
                        <tr>
                            <th>
                                <strong>الكميه</strong>
                            </th>
                            <th class="text-right" style="padding-right: 15px;">
                                <strong>اسم المنتج</strong>
                            </th>
                        </tr>
                        <!--                        </thead>-->
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-esc="int(move.product_uom_qty)"/>
                                    <!--                                    <span t-field="move.product_uom"/>-->
                                </td>
                                <td class="text-right" style="padding-right: 15px;">
                                    <span t-field="move.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-borderless table-condensed table-sm mt48"
                           t-if="o.move_line_ids and o.state=='done'"
                           style="font-size: 1.5rem !important;font-family: monospace !important;">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')"/>
                        <!--                        <thead>-->
                        <tr>
                            <th>
                                <strong>الكميه</strong>
                            </th>
                            <th name="lot_serial" t-if="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                رقم سيريال المخزن
                            </th>
                            <th class="text-right" style="padding-right: 15px;">
                                <strong>اسم المنتج</strong>
                            </th>
                        </tr>
                        <!--                        </thead>-->
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td>
                                    <span t-esc="int(move_line.qty_done)"/>
                                    <!--                                    <span t-field="move_line.product_uom_id"/>-->
                                </td>
                                <td t-if="has_serial_number and move_line.lot_name"
                                    groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_name"/>
                                </td>
                                <td t-elif="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_id.name"/>
                                </td>
                                <td class="text-right" style="padding-right: 15px;">
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move_line.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move_line.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        <t t-if="o.backorder_ids and o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become
                            available.
                        </t>
                    </p>
                </div>
            </t>
        </t>
    </template>
    <template id="report_unvaildated_order_receipt">
        <t t-call="web.html_container">
            <t t-call="healthy_credit_note.healthy_internal_layout">
                <!--                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />-->

                <div role="alert" class="alert alert-danger">
                    <h3 class="text-center">The Order Is not Validated</h3>
                </div>
            </t>
        </t>
    </template>

    <template id="report_deliveryslip_receipt">
        <t t-foreach="docs" t-as="o">
            <t t-if="o.state == 'done'">
                <t t-call="healthy_credit_note.report_delivery_document_receipt"/>
            </t>
            <t t-if="not o.state == 'done'">
                <t t-call="healthy_credit_note.report_unvaildated_order_receipt"/>
            </t>
        </t>
    </template>
    <report
            id="invoice_reprint_receipt"
            string="Delivery Slip Receipt"
            model="stock.picking"
            report_type="qweb-pdf"
            file="healthy_credit_note.report_deliveryslip_receipt"
            name="healthy_credit_note.report_deliveryslip_receipt"
            paperformat="healthy_credit_note.paperformat_account_invoice_reprint_receipt"
    />
</odoo>
