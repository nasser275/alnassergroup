<odoo>
    <data>
        <record id="view_form_return_replenishment" model="ir.ui.view">
            <field name="name">return_replenishment_form_view</field>
            <field name="model">return.replanishment</field>
            <field name="arch" type="xml">
                <form string="Return Main Warehouse" delete="false">
                    <sheet>
                        <header>
                            <field name="state" widget="statusbar"/>
                            <field name="branch_available_to" invisible="1"/>
                            <field name="branch_available_from" invisible="1"/>
                            <!--                        <field name="user" invisible="1"/>-->
                            <button string="Request" type="object" name="set_request"
                                    attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            <button string="Confirm" type="object" name="set_confirm"
                                    attrs="{'invisible': ['|',('state', '!=', 'request'),('branch_available_to','!=',True)]}"/>
                            <button string="Cancel" type="object" name="set_cancel"
                                    attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        </header>
                        <!--                    <sheet>-->
                        <group>
                            <group>
                                <field name="warehouse_from"
                                       attrs="{'readonly':[('state' , 'in', ['confirm','request'])]}"
                                       options='{"no_open": True}'/>
                            </group>
                            <group>
                                <field name="warehouse_to" readonly="1" options='{"no_open": True}'/>
                            </group>
                            <field name="date_action" invisible="1"/>
                            <field name="provided_products"
                                   options='{"no_open": True,"no_create": True, "no_create_edit":True}'
                                   attrs="{'readonly':[('state' , 'in', ['confirm'])]}">
                                <tree editable="bottom" delete="false">
                                    <field name="state" invisible="1"/>
                                    <field name="product"
                                           attrs="{'readonly': [('state' , 'in', ['request','confirm'])]}" options="{'no_create':True}"/>
                                    <field name="product_category"/>
                                    <field name="available_qty" groups="healthy_credit_note.access_to_onhand_group_product" readonly="1"/>
                                    <field name="uom"/>
                                    <field name="requested_qty" attrs="{'readonly': [('state','=', 'request')]}"
                                           sum="requested_qty"/>
                                    <field name="confirmed_qty" attrs="{'readonly': [('state','in', ['draft','request','confirm'])]}"
                                           sum="confirmed_qty"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_tree_return_Replenishment" model="ir.ui.view">
            <field name="name">replenishment_return_tree_view</field>
            <field name="model">return.replanishment</field>
            <field name="arch" type="xml">
                <tree delete="false">

                    <field name="sequence_num"/>
                    <field name="date_action"/>
                    <field name="warehouse_from"/>
                    <field name="warehouse_to"/>
                    <field name="state"/>
                    <!--                    <field name="requested_qty"/>-->
                    <!--                    <field name="approved_qty"/>-->
                    <!--                    <field name="confirmed_qty"/>-->
                </tree>

            </field>
        </record>

        <record id="return_replanishment_view_search" model="ir.ui.view">
            <field name="name">return.replanishment.view.search</field>
            <field name="model">return.replanishment</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="date_action" string="Date" date="date_action"/>
                    <filter name="sequence_num" string="Ref"/>
                    <filter name="warehouse_from" string="From"/>
                    <filter name="warehouse_to" string="To"/>
                    <field name="date_action" string="Date"/>
                    <field name="sequence_num" string="Ref"/>
                    <field name="warehouse_from" string="From"/>
                    <field name="warehouse_to" string="To"/>
                </search>
            </field>
        </record>


        <record id="action_return_replenishment_session" model="ir.actions.act_window">
            <field name="name">Return Main Warehouse</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">return.replanishment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to add a new Return Order.
                </p>
            </field>
        </record>

        <record id="user_return_transfer_view_form" model="ir.ui.view">
            <field name="name">return.replanishment.form.inherit</field>
            <field name="model">return.replanishment</field>
            <field name="inherit_id" ref="alfa.view_form_return_replenishment"/>
            <field name="groups_id" eval="[(6, 0, [ref('alfa.return_user') ])]"/>
            <field name="arch" type="xml">
                <field name="warehouse_from" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <!--                <field name="warehouse_to" position="attributes">-->
                <!--                    <attribute name="readonly">1</attribute>-->
                <!--                </field>-->
            </field>
        </record>

        <record id="manager_return_transfer_view_form" model="ir.ui.view">
            <field name="name">return.replanishment.form.inherit</field>
            <field name="model">return.replanishment</field>
            <field name="inherit_id" ref="alfa.view_form_return_replenishment"/>
            <field name="groups_id" eval="[(6, 0, [ref('alfa.return_manager') ])]"/>
            <field name="arch" type="xml">
                <field name="warehouse_from" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
                <!--                <field name="warehouse_to" position="attributes">-->
                <!--                    <attribute name="readonly">0</attribute>-->
                <!--                </field>-->
            </field>
        </record>

        <menuitem id="return_replenishment"
                  name="Return Main Warehouse"
                  parent="alfa.replenishment"
                  action="action_return_replenishment_session"
                  sequence="2"/>
    </data>
</odoo>