<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="common_questions_form" model="ir.ui.view">
            <field name="name">Common Questions</field>
            <field name="model">common.questions</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="common_questions_tree" model="ir.ui.view">
            <field name="name">Common Questions</field>
            <field name="model">common.questions</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="action_common_questions" model="ir.actions.act_window">
            <field name="name">Common Questions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">common.questions</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <menuitem id="menu_common_questions_action" name="Common Questions" parent="menu_api_action"
                  action="action_common_questions" sequence="10"/>


    </data>
</odoo>