<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="healthy_sales_form_wiz">
            <field name="name">تقرير المبيعات اليومية</field>
            <field name="model">healthy.sales.wiz</field>
            <field name="arch" type="xml">
                <form string="create Part Payment">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="branch_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_excel" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_healthy_sales" model="ir.actions.act_window">
            <field name="name">تقرير المبيعات اليومية</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">healthy.sales.wiz</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="healthy_sales_form_wiz"/>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_healthy_sales_action" name="تقرير المبيعات اليومية" parent="account.menu_finance_reports"
                  action="action_healthy_sales" sequence="500"/>



         <record model="ir.ui.view" id="healthy_sales_details_form_wiz">
            <field name="name">تقرير المبيعات اليومية بالتفصيل</field>
            <field name="model">healthy.sales.details.wiz</field>
            <field name="arch" type="xml">
                <form string="create Part Payment">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="branch_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_excel" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_healthy_sales_details" model="ir.actions.act_window">
            <field name="name">تقرير المبيعات اليومية بالتفصيل</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">healthy.sales.details.wiz</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="healthy_sales_details_form_wiz"/>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_healthy_sales_details_action" name="تقرير المبيعات اليومية بالتفصيل" parent="account.menu_finance_reports"
                  action="action_healthy_sales_details" sequence="501"/>



    </data>
</odoo>
