<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="healthy_pricelist_form_wiz">
            <field name="name">تقرير قائمة الأسعار</field>
            <field name="model">healthy.pricelist.wiz</field>
            <field name="arch" type="xml">
                <form string="create Part Payment">
                    <group>
                        <group>
                            <field name="pricelist_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_excel" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_healthy_pricelist" model="ir.actions.act_window">
            <field name="name">تقرير قائمة الأسعار</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">healthy.pricelist.wiz</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="healthy_pricelist_form_wiz"/>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_healthy_pricelist_action" name="تقرير قائمة الأسعار" parent="account.menu_finance_reports"
                  action="action_healthy_pricelist" sequence="502"/>


    </data>
</odoo>
