<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="healthy_start_balances_form_wiz">
            <field name="name">تقرير  رصيد اول المدة</field>
            <field name="model">healthy.start.balances.wiz</field>
            <field name="arch" type="xml">
                <form string="create Part Payment">
                    <group>
                        <group>
                            <field name="branch_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}'/>
<!--                            <field name="company_ids" widget="many2many_tags" options='{"no_open": True, "no_create": True}'/>-->
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                    </group>
                    <footer>
                        <button name="print_excel" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_healthy_start_balances" model="ir.actions.act_window">
            <field name="name">تقرير  رصيد اول المدة</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">healthy.start.balances.wiz</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="healthy_start_balances_form_wiz"/>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_healthy_start_balances_action" name="تقرير  رصيد اول المدة" parent="account.menu_finance_reports"
                  action="action_healthy_start_balances" sequence="504"
        groups="healthy_reports.group_start_balance_report"
        />


    </data>
</odoo>
