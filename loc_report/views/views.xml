<odoo>
    <data>
        <record id="uom_report_form" model="ir.ui.view">
            <field name="name">تقرير  المخازن</field>
            <field name="model">uom.report.wiz</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="location_ids" widget="many2many_tags"/>
                            <field name="prods" widget="many2many_tags"/>
                            <field name="report_by_ids"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="dynamic_view" type="object" string="View Data" class="oe_highlight"/>
                        or
                        <button name="print_pdf" type="object" string="Print Pdf" class="oe_highlight"/>
                        or
                        <button name="print_excel" string="Print Ecxel" type="object" default_focus="1" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel"/>

                    </footer>

                </form>
            </field>
        </record>

        <record id="action_uom_report_all" model="ir.actions.act_window">
            <field name="name">تقرير  المخازن</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">uom.report.wiz</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="uom_report_form"/>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
            </field>
        </record>


        <menuitem id="uom_menu_report" name="تقرير  المخازن"
                  parent="stock.menu_warehouse_report"
                  action="action_uom_report_all" sequence="2"/>

    </data>
</odoo>