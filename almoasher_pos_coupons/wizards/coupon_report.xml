<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="coupon_report_form_wiz">
            <field name="name">Coupon Report</field>
            <field name="model">pos.coupon.reports</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <group>
                            <field name="coupon_ids" widget="many2many_tags" options="{
                    'no_create': True,
                    'no_create_edit': True,
                    'no_open': True
                }"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_excel" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_coupon_report" model="ir.actions.act_window">
            <field name="name">Coupon Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.coupon.reports</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="coupon_report_form_wiz"/>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_coupon_report_action" name="Coupon Report" parent="pos_coupon_main"
                  action="action_coupon_report" sequence="201"/>


    </data>
</odoo>
