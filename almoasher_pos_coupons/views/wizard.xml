<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="wizard_gift_voucher_pos_form" model="ir.ui.view">
          <field name="name">Gift Voucher Wizard</field>
          <field name="model">voucher.create_wizard</field>
          <field name="arch" type="xml">
             <form>
                 <sheet>
                     <h1><field name="name"/></h1>
                     <group>
                         <group>
                             <field name="voucher_type" widget="radio"/>
                             <field name="product_ids" widget="many2many_tags" attrs="{'invisible': [('voucher_type', 'in', ('category','all'))],
                                                          'required':[('voucher_type', '=', 'product')]}"/>
                         </group>
                         <group>
                             <field name="min_value" />
                             <field name="max_value" />
                             <field name="expiry_date" />
                         </group>
                     </group>
                     <footer>
                         <button name="action_apply" type="object" string="Create Vouchers" class="oe_highlight"/>
                         or
                         <button special="cancel" string="Cancel"/>
                     </footer>
                 </sheet>
             </form>
          </field>
      </record>

      <act_window id="wizard_gift_voucher_pos_action"
                  name="Create Vouchers"
                  res_model="voucher.create_wizard"
                  view_mode="form"
                  target="new"
                  key2="client_action_multi"/>

      <menuitem id="wizard_gift_voucher_pos_menu" name="Create Vouchers" parent="gift_coupon_main" action="wizard_gift_voucher_pos_action"/>

    </data>
</odoo>
