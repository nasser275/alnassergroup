<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_coupon_form" model="ir.ui.view">
            <field name="name">POS Coupon</field>
            <field name="model">pos.coupon</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Delete" name="action_deleted" states='active' type="object"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="active,available,used,deleted"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="voucher_id" attrs="{'readonly':[('state', 'not in', ['active'])]}"/>
                                <field name="remove_promotion" />
                                <field name="disable_combo" />
                                <field name="voucher_type" readonly="1"/>
                                <field name="except_check" widget="radio"
                                       attrs="{'invisible':[('voucher_type','!=','all')]}"

                                />

                                <field name="product_id" attrs="{'invisible': [('voucher_type', '!=', 'product')],
                                        'required':[('voucher_type', '=', 'product')],'readonly':[('state', 'not in', ['active'])]}"/>
                                <field name="product_ids" widget="many2many_tags" attrs="{'invisible': [('voucher_type', '!=', 'multi')],
                                        'required':[('voucher_type', '=', 'multi')],'readonly':1}"/>

                                <field name="except_product_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('except_check', '!=', 'product')],'required':[('except_check', '=', 'product'),('voucher_type', '=', 'all')]}"/>
                                <field name="except_category_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('except_check', '!=', 'category')],'required':[('except_check', '=', 'category'),('voucher_type', '=', 'all')]}"/>


                                <field name="discount_rule" readonly="1"/>
                                <field name="discount_type" readonly="1"/>
                                <field name="discount_value" attrs="{'readonly':[('state', 'not in', ['active'])]}"
                                       force-save="1"/>
                                <field name="start_date" attrs="{'readonly':[('state', 'not in', ['active'])]}"/>
                            </group>
                            <group>
                                <field name="partner_id" attrs="{'readonly':[('state', 'not in', ['new'])]}"/>
                                <field name="partner_limit" attrs="{'readonly':[('state', 'not in', ['new'])],'invisible': [('partner_id', '=',False)]}"/>
                                <field name="partner_total" readonly="1"/>
                                <field name="coupon_usage" readonly="1"/>
                                <field name="coupon_usage_limit" string="Coupon Limit Use" attrs="{'invisible': [('coupon_usage', '!=', 'limited')],
                                                                'required':[('coupon_usage', '=', 'limited')]}"/>
                                <field name="min_order_value" attrs="{'readonly':[('state', 'not in', ['active'])]}"/>
                                <field name="calc_by" readonly="1"/>
                                <field name="used_times" readonly="1"/>
                                <!-- <field name="done_used_times" invisible="1"/> -->
                                <field name="end_date" attrs="{'readonly':[('state', 'not in', ['active'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Coupon Lines" name="coupon_lines">
                                <field name="coupon_lines" readonly="1">
                                    <tree editable="buttom">
                                        <field name="order_name"/>
                                        <field name="partner_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pos_coupon_tree" model="ir.ui.view">
            <field name="name">POS Coupon</field>
            <field name="model">pos.coupon</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="voucher_id"/>
                    <field name="discount_value"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="used_times"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="action_pos_coupon" model="ir.actions.act_window">
            <field name="name">Generate POS Coupons</field>
            <field name="res_model">pos.coupon</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="POS Coupon" id="pos_coupon" action="action_pos_coupon" parent="pos_coupon_main"/>
    </data>
</odoo>