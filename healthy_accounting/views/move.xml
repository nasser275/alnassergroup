<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
    <record id="view_move_form_healthy_accounting" model="ir.ui.view">
      <field name="name">account.move.form</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='button_cancel'][1]" position="attributes">
          <attribute name="groups">healthy_accounting.group_allow_cancel_move</attribute>
        </xpath>
        <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
          <attribute name="groups">healthy_accounting.group_allow_cancel_move</attribute>
        </xpath>
        <xpath expr="//button[@name='button_draft']" position="attributes">
          <attribute name="groups">healthy_accounting.group_allow_reset_draft_move</attribute>
        </xpath>

      </field>
    </record>
  </data>
</odoo>