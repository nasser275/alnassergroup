<odoo>

    <record id="group_pos_delivery_service" model="res.groups">
        <field name="name">Enable Delivery Service</field>
    </record>
    <record id="pos_config_view_form_inherit_pos_delivery_service" model="ir.ui.view">
        <field name="name">delivery.order.pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='category_reference']" position="after">
                <div class="col-12 col-12 o_setting_box" >
                    <div class="o_setting_left_pane">
                        <field name="enable_delivery_service"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_delivery_service" string="Enable Delivery Service"/>
                        <div class="text-muted">
                            <field name="delivery_service_product_id"
                                   attrs="{'required':[('enable_delivery_service','=',True)],'invisible':[('enable_delivery_service','=',False)]}"/>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-12 o_setting_box">
                    <div class="o_setting_left_pane">
                        <label for="enable_gift" string="Enable Gift "/>
                        <field name="enable_gift"/>
                    </div>

                </div>


            </xpath>
        </field>
    </record>


</odoo>
