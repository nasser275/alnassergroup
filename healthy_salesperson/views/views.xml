<odoo>
  <data>



          <record id="salesperson_view_pos_pos_form" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sales_person" readonly="1"/>
                </xpath>
            </field>
        </record>

     <record id="view_employee_form_inherit40" model="ir.ui.view">
            <field name="name">view.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='work_phone']" position="after">
                    <field name="is_sales_person"/>
                </xpath>

            </field>
        </record>
  </data>
</odoo>