        <record id="view_pos_discount_reasons_form" model="ir.ui.view">
            <field name="name">Pos Discount Reasons</field>
            <field name="model">pos.discount.reasons</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="show"/>
                            <field name="is_offer" invisible="1"/>
                            <field name="fixed" invisible="1"/>
                            <field name="healthy_discount_product_id" attrs="{'invisible':[('is_offer','=',True)]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_pos_discount_reasons_tree" model="ir.ui.view">
            <field name="name">Pos Discount Reasons</field>
            <field name="model">pos.discount.reasons</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="show"/>
                      <field name="is_offer" invisible="1"/>
                            <field name="fixed" invisible="1"/>
                </tree>
            </field>
        </record>

