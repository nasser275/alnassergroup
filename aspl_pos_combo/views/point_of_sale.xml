<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

		<record id="ace_view_pos_config_form" model="ir.ui.view" >
	        <field name="name">pos.config.form.view.inherit</field>
	        <field name="model">pos.config</field>
	        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
	        <field name="arch" type="xml">
	            <div id="category_reference" position="before">
		            <div class="col-xs-12 col-md-9 o_setting_box" id="config_enable_combo">
		                <div class="o_setting_left_pane">
		                    <field name="enable_combo"/>
		                </div>
	                	<div class="o_setting_right_pane">
	                     	<label for="enable_combo"/>
	                     	<div class="text-muted" id="lbl_show_image">
	                        	Use combo feature in restaurant
	                     	</div>
							<div class="content-group mt16"
                                 attrs="{'invisible' : [('enable_combo', '=', False)]}">
                                <div class="row mt16">
                                    <label string="Single click for edit combo" for="edit_combo" class="col-md-3 o_light_label"/>
                                    <field name="edit_combo" />
                                </div>
								<div class="row mt16">
                                    <label string="Hide UOM for combo product" for="hide_uom" class="col-md-3 o_light_label"/>
                                    <field name="hide_uom" />
                                </div>
                            </div>
	                    </div>
	                </div>
                </div>
			</field>
		</record>

        <record id="package_product_template_only_form_view" model="ir.ui.view">
	        <field name="name">package.product.template.form.view</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="product.product_template_form_view"/>
	        <field name="arch" type="xml">
	            <field name="sale_ok" position="before">
	                <div>
	                    <field name="is_combo"/>
	                    <label for="is_combo"/>

	                </div>
	                <div>
	                    <field name="hide_discount"/>
	                    <label for="hide_discount"/>

	                </div>
	            </field>
	            <xpath expr='//page[4]' position="after" >
	               <page string="Combo" attrs="{'invisible': [('is_combo', '=', False)]}">
					   <group>
						   <field name="expect_branch_ids" widget="many2many_tags" attrs="{'invisible': [('is_combo', '=', False)]}"/>
						   <field name="combo_date_start" attrs="{'invisible': [('is_combo', '=', False)]}"/>
						   <field name="combo_date_end" attrs="{'invisible': [('is_combo', '=', False)]}"/>
						   <field name="combo_limit" attrs="{'invisible': [('is_combo', '=', False)]}"/>

					   </group>

					   <field name="product_combo_ids">
	                       <tree editable="bottom">
	                           <field name="require"/>
	                           <field name="pos_category_id" attrs="{'readonly': [('require', '=', True)]}" options="{'no_create':True}"/>
	                           <field name="product_ids" widget="many2many_tags" 
                                   context="{'is_required': require, 'category_from_line': pos_category_id}" options="{'no_create':True}"/>
							   <field name="discount"/>
							   <field name="no_of_items" attrs="{'invisible': [('require', '=', True)]}"/>
	                       </tree>
	                   </field>
	               </page>
					<page string="Combo Cost&amp;Price" attrs="{'invisible': [('is_combo', '=', False)]}">
						<group>
							<field name="combo_cost" attrs="{'invisible': [('is_combo', '=', False)]}"/>
						   <field name="combo_price" attrs="{'invisible': [('is_combo', '=', False)]}"/>
							<button name="create_combo_lines" type="object" string="Create Combo Lines" class="oe_highlight"
							groups="aspl_pos_combo.group_create_combo_lines"
							/>
						</group>
						<field name="product_combo_line_ids">
	                       <tree editable="bottom">
	                           <field name="product_id"/>
	                           <field name="combo_line_cost" sum="Total"/>
	                           <field name="combo_line_price" sum="Total"/>
	                       </tree>
	                   </field>
					</page>
	            </xpath>

			</field>
    </record>
		<!-- Inherit Form View to Modify it -->
		<record id="view_pos_pos_form_52550" model="ir.ui.view">
			<field name="name">pos.order.form</field>
			<field name="model">pos.order</field>
			<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='lines']//tree//field[@name='full_product_name']" position="after">
					<field name="is_combo" readonly="1" />
					<field name="combo_name" readonly="1"/>
					<field name="main_combo" readonly="1"/>
					<field name="combo_price" readonly="1" />
					<field name="combo_cost" readonly="1" />
					<field name="combo_line_cost" sum="Total" readonly="1" />
					<field name="combo_line_price" sum="Total" readonly="1" />
				</xpath>
			</field>
		</record>


    </data>
</odoo>
