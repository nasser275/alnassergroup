<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="healthy_product_brands_product_template_only_form_view" model="ir.ui.view">
            <field name="name">view.product.template.inherit.new_fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="brand_id" options='{"no_open": True, "no_create": True}'/>
                </xpath>
            </field>
        </record>
        <record id="healthy_product_brands_product_normal_form_view" model="ir.ui.view">
            <field name="name">view.product.product.inherit.new_fields</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="brand_id" options='{"no_open": True, "no_create": True}'/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>