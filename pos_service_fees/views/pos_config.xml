<odoo>

    <record id="pos_config_view_form_inherit_apos_service_fees" model="ir.ui.view">
        <field name="name">delivery.order.pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='category_reference']" position="after">

                <div class="col-12 col-12 o_setting_box">

                    <div class="o_setting_left_pane">
                        <field name="enable_service"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_service"/>
                        <div class="text-muted">
                            <field name="service_product_id"
                                   attrs="{'required':[('enable_service','=',True)],'invisible':[('enable_service','=',False)]}"/>
                        </div>
                    </div>

                </div>

            </xpath>
        </field>
    </record>


</odoo>
