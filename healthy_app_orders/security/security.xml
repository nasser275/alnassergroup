<odoo>
    <record model="ir.module.category" id="app_order_category">
      <field name="name">App Order</field>
      <field name="description">User access level for this module</field>
      <field name="sequence">10</field>
    </record>

    <record id="app_order_user" model="res.groups">
      <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
      <field name="category_id" ref="healthy_app_orders.app_order_category"/>
    </record>
    <record id="group_store_manager" model="res.groups">
      <field name="name">Store Manager</field>
        <field name="implied_ids" eval="[(4, ref('app_order_user'))]"/>
      <field name="category_id" ref="healthy_app_orders.app_order_category"/>
    </record>
    <record id="app_order_manager" model="res.groups">
      <field name="name">Adminstrator</field>
        <field name="implied_ids" eval="[(4, ref('group_store_manager'))]"/>
      <field name="category_id" ref="healthy_app_orders.app_order_category"/>
    </record>
<!--    <record id="rule_app_multi_company_global" model="ir.rule">-->
<!--        <field name="name">APP Order Global</field>-->
<!--        <field name="model_id" ref="model_app_order" />-->
<!--        <field name="global" eval="True"/>-->
<!--        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>-->
<!--    </record>-->
    <record id="rule_app_multi_company_user" model="ir.rule">
        <field name="name">APP Order User</field>
        <field name="model_id" ref="model_app_order" />
        <field name="groups" eval="[(6,0,[ref('app_order_user')])]"/>
        <field name="domain_force">['|',('branch_id', '=', False),('branch_id', '=', user.branch_id.id)]</field>
    </record>
    <record id="rule_app_multi_company_group_store_manager" model="ir.rule">
        <field name="name">APP Order Store Manager</field>
        <field name="model_id" ref="model_app_order" />
        <field name="groups" eval="[(6,0,[ref('group_store_manager')])]"/>
        <field name="domain_force">[('branch_id', 'in', user.branch_ids.ids)]</field>
    </record>
    <record id="rule_app_report_group_store_manager" model="ir.rule">
        <field name="name">APP Order Report Store Manager</field>
        <field name="model_id" ref="model_app_order_report" />
        <field name="groups" eval="[(6,0,[ref('group_store_manager')])]"/>
        <field name="domain_force">[('branch_id', 'in', user.branch_ids.ids)]</field>
    </record>
    <record id="rule_app_report_adminstrator" model="ir.rule">
        <field name="name">APP Order Report Adminstrator</field>
        <field name="model_id" ref="model_app_order_report" />
        <field name="groups" eval="[(6,0,[ref('app_order_manager')])]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    <record id="rule_app_multi_company_manager" model="ir.rule">
        <field name="name">APP Order Manager</field>
        <field name="model_id" ref="model_app_order" />
        <field name="groups" eval="[(6,0,[ref('app_order_manager')])]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>